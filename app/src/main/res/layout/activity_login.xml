<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.threewolftech.shiftplanner.Login">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivLoginLogo"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="57dp"
        android:layout_above="@+id/etLoginUserName"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="User name"
        android:ems="10"
        android:id="@+id/etLoginUserName"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/etLoginPassword"
        android:layout_below="@+id/etLoginUserName"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Account"
        android:id="@+id/bLoginNewAccount"
        android:layout_below="@+id/etLoginPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need Help?"
        android:id="@+id/bLoginNeedHelp"
        android:layout_below="@+id/bLoginNewAccount"
        android:layout_alignRight="@+id/bLoginNewAccount"
        android:layout_alignEnd="@+id/bLoginNewAccount"
        android:layout_alignLeft="@+id/bLoginNewAccount"
        android:layout_alignStart="@+id/bLoginNewAccount" />
</RelativeLayout>
